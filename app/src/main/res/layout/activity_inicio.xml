<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E5E5"
    tools:context=".login_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E4E5E5">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#08A1CD"
                app:title="Inicio" />

            <!-- Aqui va el codigo adicional -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="24sp"
                android:gravity="center"
                android:padding="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp">

                    <TextView
                        android:id="@+id/Sesion1"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="left"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_file_open"
                        android:onClick="onTextViewClicked"
                        android:text="P1"/>
                    <TextView
                        android:id="@+id/Tema1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="40dp"
                        android:textColor="#0493C5"
                        android:text="P2"/>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_margin="8dp">

                    <TextView
                        android:id="@+id/Sesion2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="left"
                        android:clickable="true"
                        android:drawableStart="@drawable/ic_file_open"
                        android:onClick="onTextViewClicked"
                        />
